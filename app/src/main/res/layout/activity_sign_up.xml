<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000080"
    tools:context="com.example.login.SignUp">

    <TextView
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:text="SIGN UP"
        android:padding="60dp"
        android:textSize="48sp"
        android:paddingTop="60dp"
        android:textStyle="bold"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="101dp"
        app:layout_constraintRight_toLeftOf="@+id/relativeLayout"
        app:layout_constraintLeft_toRightOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.512" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.51"
        tools:context=".LoginActivity"
        android:id="@+id/relativeLayout">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="54dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:hint="Enter Name"
            android:textColor="@android:color/white"
            android:textColorHint="#808080"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="43dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="Email ID"
            android:textColor="@android:color/white"
            android:layout_below="@+id/et_name"
            android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_name"
            android:layout_below="@+id/et_username"
            android:layout_marginTop="37dp"
            android:text="Password"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:hint="Enter Email ID"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="#808080" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#808080" />

        <EditText
            android:id="@+id/et_cpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/et_password"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#808080" />

        <Button
            android:id="@+id/bt_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et_cpassword"
            android:layout_below="@+id/et_cpassword"
            android:layout_marginStart="14dp"
            android:layout_marginTop="31dp"
            android:text="@string/SignUp"
            tools:text="@string/SignUp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
